<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/listBackground"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtPlayspotInList"
        android:focusable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imgLikedInList"
        android:layout_toLeftOf="@id/imgLikedInList"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtLevelInList"
        android:focusable="false"
        android:layout_below="@id/txtPlayspotInList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtTempInList"
        android:focusable="false"
        android:layout_below="@id/txtLevelInList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtRiverInList"
        android:focusable="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtTempInList"
        android:layout_toStartOf="@id/imgLikedInList"
        android:layout_toLeftOf="@id/imgLikedInList"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@id/imgLikedInList"
        android:src="@drawable/ic_question"
        android:contentDescription="@string/liked"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>